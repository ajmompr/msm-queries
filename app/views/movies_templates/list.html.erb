<h1> List of all movies </h1>
<hr>

<table border="1">
  <tr>
    <th> ID </th>
    <th> Image </th>
    <th> Title </th>
    <th> Year </th>
    <th> Director </th>
    <th></th>
  </tr>

  <% Movie.all.each do |a_movie|%>
  <tr>
    <td> <%= a_movie.id %> </td>
    <td> 
      <img src="<%= a_movie.image%>" width="250">
    </td>
    <td> <%= a_movie.title %> </td>
    <td> <%= a_movie.year %> </td>
    <% Director.all.each do |a_director| %>
      <% if a_director.id == a_movie.director_id %>
    <td> <%= a_director.name %> </td>
      <% end %>
    <% end%>
    <td> <a href="#"> Show details </a> </td>
  <% end %>
  </tr>

</table>
